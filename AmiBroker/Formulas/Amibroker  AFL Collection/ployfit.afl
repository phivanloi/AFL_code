 Katsayi55=Katsayi55*(ACID*DTR);
 Katsayi65=Katsayi65*(ACID*DTR);

 y5=Katsayi25*x5*exp(5) + Katsayi35*x5*exp(4) +Katsayi45*x5*exp(3) + Katsayi55*x5*exp(2) + Katsayi65*x5; 
