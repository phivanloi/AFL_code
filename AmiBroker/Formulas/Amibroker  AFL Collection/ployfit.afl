 Katsayi66=Katsayi66*(ACID*DTR);

 y6 =Katsayi16*x6*exp(6)+Katsayi26*x6*exp(5) +Katsayi36*x6*exp(4) + Katsayi46*x6*exp(3) + Katsayi56*x6*exp(2) + Katsayi66*x6; 
 y6m=WMA(data,y6);

